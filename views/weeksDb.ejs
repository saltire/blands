<!doctype html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Blattle of the Blands</title>
    <link rel='stylesheet' href='/style.css'>
  </head>
  <body>
    <header>
      <form action='/db/addWeek' method='post'>
        <input type='submit' value='Next week'>
      </form>
      <form action='/db/clear' method='post'>
        <input type='submit' value='Reset'>
      </form>
    </header>
    <div class='flex'>
      <% weeks.forEach((week, w) => { %>
        <div>
          <h1>Week <%= week.id %></h1>

          <h2>Top 10 Bands</h2>
          <% week.top_bands.forEach((band) => { %>
            <p><%= band.rank %>. <span style='color: <%= band.color %>'><%= band.name %></span> - <%= band.buzz %></p>
          <% }); %>

          <h2>Battles</h2>
          <% week.battles.forEach((battle, b) => { %>
            <h4>Level <%= battle.level %></h4>
            <div class='pad'>
              <% battle.entries.forEach((entry) => { %>
                <p><span style='color: <%= entry.band.color %>'><%= entry.band.name %></span> - <%= entry.buzz_start + entry.buzz_awarded %></p>
              <% }); %>
            </div>
          <% }); %>
        </div>
      <% }); %>
    </div>
  </body>
</html>
