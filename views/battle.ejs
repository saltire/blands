<!doctype html>
<html>
  <%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>

    <header><h1>Battle #<%= battle.id %></h1></header>

    <main>
      <% battle.rounds.forEach((round, r) => { %>
        <h2>Round <%= r + 1 %></h2>
        <% round.performances.forEach(perf => { %>
          <p><%- include('partials/bandname', { band: perf.band }) %> - <%= perf.song.name %> - <b><%= perf.score %></b></p>
        <% }); %>
        <h3>Eliminated: <%- include('partials/bandname', { band: round.performances[round.performances.length - 1].band }) %></h3>
      <% }); %>
    </main>

    <h2>Winner: <%- include('partials/bandname', { band: battle.bands[0].band }) %></h2>
  </body>
</html>
